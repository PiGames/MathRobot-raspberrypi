{
  "extends": "idiomatic",
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "never"
    }],
    "no-console": 0,
    "one-var": ["error", "never"],
    "semi": ["error", "always"],
    "linebreak-style": 0,
    "func-names": 0,
    "space-in-parens": ["error", "always"]
  }
}
